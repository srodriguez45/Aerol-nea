<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Aerolínea</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body ng-app="app">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Aerolínea", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Usuarios", "Index", "User")</li>
                    <li>@Html.ActionLink("Vuelos", "Index", "Flight")</li>
                    @*<li><a href="@Url.RouteUrl("DefaultApi", new { httproute = true, controller = "Users" })" target="_blank">Usuarios</a></li>
                        <li><a href="@Url.RouteUrl("DefaultApi", new { httproute = true, controller = "Flights" })" target="_blank">Vuelos</a></li>
                        <li><a href="@Url.RouteUrl("DefaultApi", new { httproute = true, controller = "FlightsUsers" })" target="_blank">Vinculaciones</a></li>*@
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" ng-controller="aeroController">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Aerolínea ASP.NET</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/aero")
    @Scripts.Render("~/bundles/init")
    @RenderSection("scripts", required: false)
</body>
</html>